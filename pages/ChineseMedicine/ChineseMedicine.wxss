/* pages/ChineseMedicine/ChineseMedicine.wxss */
.banner {
  width: 100%;
}
.roomico {
  position: relative;
  text-align: center;
}
.roomico image {
  width: 200rpx;
  height: 50rpx;
}
.roomico text {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -19rpx;
  margin-left: -56rpx;
  color: #834e00;
  font-size: 28rpx;
}
.roomtailwrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.roomdetail {
  position: relative;
  width: 175rpx;
  height: 60rpx;
  margin: 15rpx 5rpx;
}
.roomdetail image {
  position: absolute;
  width: 100%;
  height: 100%;
}
.roomdetail text {
  font-size: 24rpx;
  line-height: 60rpx;
  position: absolute;
  left: 50%;
  margin-left: -48rpx;
}

.icotitle {
  text-align: center;
}
.icoleft, .icoright {
  width: 55rpx;
  height: 21rpx;
}
.icodes {
  font-size: 28rpx;
  color: #834e00;
}
.newsdetail {
  position: relative;
  width: 300rpx;
  height: 440rpx;
  margin: 15rpx 5rpx;
  border: 1rpx solid #834e00;
}
.newsdetail image {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 214rpx;
}
.newsdetail text:nth-last-child(2) {
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: bold; 
}
.newsdetail text:nth-last-child(1) {
  font-size: 24rpx;
  line-height: 28rpx;
}