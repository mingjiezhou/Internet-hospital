    border: 2rpx solid #c9c9c9;
    font-size: 24rpx;
}

.phone_select{
    margin-top:0;
    z-index: 100;
    /*//小程序中z-index和absolute需要同时存在，元素才能脱离文档。  */
    position: absolute;
    margin-right: 30rpx; 
    right: 0;
    top: 80rpx;
    width: 260rpx;
    border-radius: 14rpx;
    border: 2rpx solid #c9c9c9;
    border-bottom: none;
    background: #fff;
}
.select_one{
    text-align: center;
    /* //脱离文档后元素width不能再用百分比。 */
    width:260rpx;   
    height:78rpx;
    line-height:78rpx;
    margin-right: 30rpx;
    border-bottom:2rpx solid #c9c9c9;
    font-size: 24rpx;
}
.personal_image{
    z-index: 100;
    position: absolute;
    right:2.5%;
    width: 34rpx;
    height: 20rpx;
    margin:24rpx 20rpx auto auto;
    transition: All 0.4s ease;  
    -webkit-transition: All 0.4s ease;
}
.rotateRight{
  /* //180°旋转图片。 */
    transform: rotate(180deg); 
}


