/*服务列表  */
.serviceList {
  display: flex;
  align-items: center;
  justify-content: center; 
  flex-wrap: wrap;
  margin: 10rpx auto;
}
.serviceDetail {
  flex: 1;
  flex-basis: 30%;
  height: 180rpx;
  text-align: center;
  border-left: 2rpx solid #f6f6f6;
  border-right: 2rpx solid #f6f6f6;
