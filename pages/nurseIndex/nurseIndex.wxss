  flex: 2;
  padding-top: 28rpx;
}
.serviceFastText1{
  display: block;
}
.serviceFastText2{
  display: block;
  margin-left: 70rpx;
}
.serviceFastText1 text{
  color: #ff303b;
  font-size: 32rpx;
}


/*下拉菜单  */
.seiviceRangeText1 {
  font-size: 28rpx;
  color: #333333;
  margin-left: 30rpx;
  line-height: 80rpx;
}
.person_box{
    position: relative;
    width: 100%;
    height: 80rpx;
    /* background: red; */
}
.phone_personal{
    width: 100%;
    /* color:rgb(34, 154, 181); */
    color: #333333;
    height:60rpx;
    line-height:60rpx;
    text-align: center;
}
.phone_one{
  /* //用flex布局更方便。 */
    display: inline-flex; 
    position: absolute;
    right: 0;
    justify-content: space-between;
    /* background-color:rgb(239, 239, 239); */
    width:260rpx;
    height:60rpx;
    margin-top:10rpx;
    margin-right:30rpx;
    border-radius: 14rpx;
    /* border-bottom:2rpx solid rgb(255, 255, 255); */
    border: 2rpx solid #c9c9c9;
    font-size: 24rpx;
}

.phone_select{
    margin-top:0;
    z-index: 100;
    /*//小程序中z-index和absolute需要同时存在，元素才能脱离文档。  */
    position: absolute;
    margin-right: 30rpx; 
    right: 0;
    top: 80rpx;
    width: 260rpx;
    border-radius: 14rpx;
    border: 2rpx solid #c9c9c9;
    border-bottom: none;
    background: #fff;
    
}
.select_one{
    text-align: center;
    /* //脱离文档后元素width不能再用百分比。 */
    width:260rpx;   
    height:60rpx;
    line-height:60rpx;
    margin-right: 30rpx;
    border-bottom:2rpx solid #c9c9c9;
    font-size: 24rpx;
}
.personal_image{
    z-index: 100;
    position: absolute;
    right:2.5%;
    width: 34rpx;
    height: 20rpx;
    margin:24rpx 20rpx auto auto;
    transition: All 0.4s ease;  
    -webkit-transition: All 0.4s ease;
}
.rotateRight{
  /* //180°旋转图片。 */
    transform: rotate(180deg); 
}

